<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>Carrot2 Controller</display-name>
  <description>The main controller component for Carrot2 architecture.</description>
  <servlet>
    <servlet-name>Carrot2 Init Servlet</servlet-name>
    <servlet-class>com.dawidweiss.carrot.controller.carrot2.Carrot2InitServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/carrot-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>log4j.properties</param-name>
      <param-value>/WEB-INF/log4j.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>jsp_preload_1</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>jsp_preload_2</servlet-name>
    <jsp-file>/error.jsp</jsp-file>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>jsp_preload_3</servlet-name>
    <jsp-file>/largeInputSearch.jsp</jsp-file>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>jsp_preload_4</servlet-name>
    <jsp-file>/output.jsp</jsp-file>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>jsp_preload_5</servlet-name>
    <jsp-file>/search.jsp</jsp-file>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>struts-action</servlet-name>
    <servlet-class>com.dawidweiss.util.struts.ForcedRequestEncodingActionServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>validate</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>factory</param-name>
      <param-value>com.dawidweiss.util.struts.XmlMessageResourcesFactory</param-value>
    </init-param>
    <init-param>
      <param-name>forcedRequestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>application</param-name>
      <param-value>i18n/carrot2-strings.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>struts-action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Carrot2 Init Servlet</servlet-name>
    <url-pattern>/reload</url-pattern>
  </servlet-mapping>
  <taglib>
    <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-bean.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-html.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-logic.tld</taglib-location>
  </taglib>
</web-app>
