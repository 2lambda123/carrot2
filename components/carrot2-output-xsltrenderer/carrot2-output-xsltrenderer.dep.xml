<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../etc/component-dependency.dtd" >

<component
    name="carrot2-output-xsltrenderer"
    description="Carrot2 XSLT Renderer Output Component">

    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-output-xsltrenderer.war" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
    </provides>

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />
	<dependency name="carrot2-util-remote" />
	<dependency name="carrot2-util-common" />
	
	<dependency name="saxon" />

</component>
