<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>Carrot2 Controller</display-name>
  <description>The main controller component for Carrot2 architecture.</description>

  <!-- Initialize framework and common library -->

  <servlet>
    <servlet-name>Carrot2 Init Servlet</servlet-name>
    <servlet-class>com.dawidweiss.carrot.remote.controller.Carrot2InitServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/carrot-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>log4j.properties</param-name>
      <param-value>/WEB-INF/log4j.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Preload these JSP pages -->

  <servlet><servlet-name>jsp_preload_1</servlet-name><jsp-file>/index.jsp</jsp-file><load-on-startup>10</load-on-startup></servlet>
  <servlet><servlet-name>jsp_preload_2</servlet-name><jsp-file>/error.jsp</jsp-file><load-on-startup>10</load-on-startup></servlet>
  <servlet><servlet-name>jsp_preload_3</servlet-name><jsp-file>/largeInputSearch.jsp</jsp-file><load-on-startup>10</load-on-startup></servlet>
  <servlet><servlet-name>jsp_preload_4</servlet-name><jsp-file>/output.jsp</jsp-file><load-on-startup>10</load-on-startup></servlet>
  <servlet><servlet-name>jsp_preload_5</servlet-name><jsp-file>/search.jsp</jsp-file><load-on-startup>10</load-on-startup></servlet>
  <servlet><servlet-name>jsp_preload_6</servlet-name><jsp-file>/demo.jsp</jsp-file><load-on-startup>10</load-on-startup></servlet>

  <!-- Struts -->

  <servlet>
    <servlet-name>ActionServlet</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param><param-name>debug</param-name><param-value>0</param-value></init-param>
	<init-param><param-name>validate</param-name><param-value>true</param-value></init-param>
    <init-param><param-name>factory</param-name><param-value>com.dawidweiss.util.struts.XmlMessageResourcesFactory</param-value></init-param>
    <init-param><param-name>detail</param-name><param-value>0</param-value></init-param>
    <init-param><param-name>application</param-name><param-value>i18n/carrot2-strings.xml</param-value></init-param>
    <init-param><param-name>config</param-name><param-value>/WEB-INF/struts-config.xml</param-value></init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>ActionServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Carrot2 Init Servlet</servlet-name>
    <url-pattern>/reload</url-pattern>
  </servlet-mapping>

  <taglib>
    <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-bean.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-html.tld</taglib-location>
  </taglib>
  <taglib>
    <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/struts-logic.tld</taglib-location>
  </taglib>
  
  <!-- Security restrictions -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected Area</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>carrot-admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Login configuration uses form-based authentication -->
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Carrot2 Configuration. Please log in.</realm-name>
  </login-config>

  <!-- Security roles referenced by this web application -->
  <security-role>
    <description>
      The role that is required to log in to the administrative panel
    </description>
    <role-name>carrot-admin</role-name>
  </security-role>
</web-app>