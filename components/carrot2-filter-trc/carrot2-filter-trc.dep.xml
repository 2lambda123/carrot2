<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.cs.put.poznan.pl/dweiss/carrot/component-dependency.dtd" >

<component
    name="carrot2-filter-trc"
    description="Carrot2 TRC Clustering filter">

    <provides profile="local">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-trc.jar" />
        </files>
        <build>
            <ant file="build.local.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="web" />
		</check-newer>
    </provides>

    <provides profile="remote">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-trc.war" />
        </files>
        <build>
            <ant file="build.remote.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="web" />
		</check-newer>
    </provides>

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />
    <dependency name="carrot2-util-common" />
	<dependency name="colt" />
    <dependency name="commons-collections" />

	<dependency name="carrot2-util-remote" 	profile="remote" />
	<dependency name="carrot2-local-core" 	profile="local" />
</component>
