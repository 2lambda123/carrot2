<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>Text Only Filter</display-name>
  <description>Filters search results data off any non-letter characters.</description>
  <servlet>
    <servlet-name>TextOnly</servlet-name>
    <servlet-class>com.dawidweiss.carrot.filter.FilterRequestProcessorServlet</servlet-class>
    <init-param>
      <param-name>filterRequestProcessor</param-name>
      <param-value>com.dawidweiss.carrot.filter.textonly.TextOnlyFilter</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>TextOnly</servlet-name>
    <url-pattern>/service</url-pattern>
  </servlet-mapping>
</web-app>
