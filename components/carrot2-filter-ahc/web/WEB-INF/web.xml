<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>AHC Clustering Component</display-name>
  <servlet>
    <servlet-name>AHCFilterComponent</servlet-name>
    <servlet-class>com.dawidweiss.carrot.filter.FilterRequestProcessorServlet</servlet-class>
    <init-param>
      <param-name>log4j.properties</param-name>
      <param-value>/WEB-INF/log4j.properties</param-value>
    </init-param>
    <init-param>
      <param-name>filterRequestProcessor</param-name>
      <param-value>com.mwroblewski.carrot.filter.ahcfilter.AHCFilter</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Main</servlet-name>
    <servlet-class>com.mwroblewski.carrot.Main</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>TermsFilter</servlet-name>
    <servlet-class>com.dawidweiss.carrot.filter.FilterRequestProcessorServlet</servlet-class>
    <init-param>
      <param-name>filterRequestProcessor</param-name>
      <param-value>com.mwroblewski.carrot.filter.termsfilter.TermsFilter</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AHCFilterComponent</servlet-name>
    <url-pattern>/service/AHC</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/service/Main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TermsFilter</servlet-name>
    <url-pattern>/service/TermsFilter</url-pattern>
  </servlet-mapping>
</web-app>
