<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>SnippetReader. A snippet extraction engine.</display-name>
  <description>SnippetReader. A snippet extraction engine.</description>
  <servlet>
    <servlet-name>FakeService</servlet-name>
    <servlet-class>org.put.fakesearchengine.FakeSearchEngineServlet</servlet-class>
    <load-on-startup>50</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>SnippetReader</servlet-name>
    <servlet-class>org.put.snippetreader.XmlRpcServlet</servlet-class>
    <init-param>
      <param-name>services</param-name>
      <param-value>/services</param-value>
    </init-param>
    <load-on-startup>40</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>TreeSnippetReader</servlet-name>
    <servlet-class>com.paulodev.carrot.input.treeExtractor.SnippetReaderServlet</servlet-class>
    <init-param>
      <param-name>searchEngineDescriptors</param-name>
      <param-value>/searchEngines</param-value>
    </init-param>
    <load-on-startup>50</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SnippetReader</servlet-name>
    <url-pattern>/extractor/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FakeService</servlet-name>
    <url-pattern>/fakeservice/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TreeSnippetReader</servlet-name>
    <url-pattern>/treeExtractor/*</url-pattern>
  </servlet-mapping>
</web-app>
