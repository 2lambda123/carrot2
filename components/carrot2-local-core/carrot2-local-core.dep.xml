<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN"
	"http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-local-core"
    description="Carrot2 Core (Local Interfaces)">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-local-core.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build"/>
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

    <dependency name="log4j" />
    <dependency name="dom4j" />
    <dependency name="commons-pool" />
    <dependency name="carrot2-license" />
    <dependency name="carrot2-util-common" />
</component>
