
<project name="Carrot2 Egothor Adapter" default="build">
    
    <property name="project.dir"      location="${basedir}" />
    <property name="carrot2.cvs.dir"  location="../.." />

    <property name="dist.name" value="carrot2-input-egothor-remote" />

    <property name="component.descriptor" location="carrot2-input-egothor.dep.xml" />
    <property name="profile" value="remote" />

    <import file="${carrot2.cvs.dir}/components/common-targets.inc" />

    <patternset id="src.patternset">
        <include name="**/remote/**" />
    </patternset>

    <path id="classpath.local">
        <fileset dir="lib" includes="*.jar" />
    </path>

    <!-- common template tasks. -->

    <property name="type"       	  value="jartype" />

</project>
