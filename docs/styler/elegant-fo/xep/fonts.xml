<?xml version="1.0"?>

<!-- ========================================================== -->
<!-- Font configuration for RenderX XEP that uses GNU fonts     -->
<!-- from the GhostScript project - download fonts from:        -->
<!-- http://sourceforge.net/projects/gs-fonts/                  -->  
<!-- ========================================================== -->

<fonts>

    <!-- use GNU fonts from ghostscript -->

   <font name="NimbusMonL-Regu"               afm="gnu-gs-fonts/n022003l.afm" pfb="gnu-gs-fonts/n022003l.pfb" embed="true" />
   <font name="NimbusMonL-Bold"          afm="gnu-gs-fonts/n022004l.afm" pfb="gnu-gs-fonts/n022004l.pfb" embed="true" />
   <font name="NimbusMonL-BoldObli"    afm="gnu-gs-fonts/n022024l.afm" pfb="gnu-gs-fonts/n022024l.pfb" embed="true" />
   <font name="NimbusMonL-ReguObli"        afm="gnu-gs-fonts/n022023l.afm" pfb="gnu-gs-fonts/n022023l.pfb" embed="true" />

   <font name="URWPalladioL-Roma"                afm="gnu-gs-fonts/p052003l.afm" pfb="gnu-gs-fonts/p052003l.pfb" embed="true" />
   <font name="URWPalladioL-Bold"           afm="gnu-gs-fonts/p052004l.afm" pfb="gnu-gs-fonts/p052004l.pfb" embed="true" />
   <font name="URWPalladioL-BoldItal"     afm="gnu-gs-fonts/p052024l.afm" pfb="gnu-gs-fonts/p052024l.pfb" embed="true" />
   <font name="URWPalladioL-Ital"         afm="gnu-gs-fonts/p052023l.afm" pfb="gnu-gs-fonts/p052023l.pfb" embed="true" />

   <font name="NimbusSanL-Regu"               afm="gnu-gs-fonts/n019003l.afm" pfb="gnu-gs-fonts/n019003l.pfb" embed="true" />
   <font name="NimbusSanL-Bold"          afm="gnu-gs-fonts/n019004l.afm" pfb="gnu-gs-fonts/n019004l.pfb" embed="true" />
   <font name="NimbusSan-BoldItalic"    afm="gnu-gs-fonts/n019024l.afm" pfb="gnu-gs-fonts/n019024l.pfb" embed="true" />
   <font name="NimbusSan-Italic"        afm="gnu-gs-fonts/n019023l.afm" pfb="gnu-gs-fonts/n019023l.pfb" embed="true" />

   <font name="Chancery"                afm="gnu-gs-fonts/z003034l.afm" pfb="gnu-gs-fonts/z003034l.pfb" embed="true" />

   <!-- ======================================================== -->
   <!-- Font aliases required by the XSL FO spec.                -->
   <!-- ======================================================== -->

   <alias name="Monospace"              font="NimbusMonL-Regu"/>
   <alias name="Monospace-Bold"         font="NimbusMonL-Bold"/>
   <alias name="Monospace-BoldOblique"  font="NimbusMonL-BoldObli"/>
   <alias name="Monospace-Oblique"      font="NimbusMonL-ReguObli"/>

   <alias name="Cursive"                font="Chancery"/>
   <alias name="Cursive-Bold"           font="Chancery"/>
   <alias name="Cursive-BoldItalic"     font="Chancery"/>
   <alias name="Cursive-Italic"         font="Chancery"/>

   <alias name="Fantasy"                font="Chancery"/>
   <alias name="Fantasy-Bold"           font="Chancery"/>
   <alias name="Fantasy-BoldItalic"     font="Chancery"/>
   <alias name="Fantasy-Italic"         font="Chancery"/>

   <alias name="Serif"                  font="URWPalladioL-Roma"/>
   <alias name="Serif-Bold"             font="URWPalladioL-Bold"/>
   <alias name="Serif-BoldItalic"       font="URWPalladioL-BoldItal"/>
   <alias name="Serif-Italic"           font="URWPalladioL-Ital"/>

   <alias name="SansSerif"              font="NimbusSanL-Regu"/>
   <alias name="SansSerif-Bold"         font="NimbusSanL-Bold"/>
   <alias name="SansSerif-BoldItalic"   font="NimbusSan-BoldItalic"/>
   <alias name="SansSerif-Italic"       font="NimbusSan-Italic"/>
   <alias name="sans-serif"             font="NimbusSanL-Regu"/>
   <alias name="sans-serif-Bold"        font="NimbusSanL-Bold"/>
   <alias name="sans-serif-BoldItalic"  font="NimbusSan-BoldItalic"/>
   <alias name="sans-serif-Italic"      font="NimbusSan-Italic"/>
   
   <!-- ======================================================== -->
   <!-- Other font aliases -->
   <!-- ======================================================== -->

   <alias name="Courier"                font="NimbusMonL-Regu"/>
   <alias name="Courier-Bold"           font="NimbusMonL-Bold"/>
   <alias name="Courier-BoldOblique"    font="NimbusMonL-BoldObli"/>
   <alias name="Courier-Oblique"        font="NimbusMonL-ReguObli"/>

   <alias name="Helvetica"              font="NimbusSanL-Regu"/>
   <alias name="Helvetica-Bold"         font="NimbusSanL-Bold"/>
   <alias name="Helvetica-BoldItalic"   font="NimbusSan-BoldItalic"/>
   <alias name="Helvetica-Italic"       font="NimbusSan-Italic"/>

   <alias name="Times"                  font="URWPalladioL-Roma"/>
   <alias name="Times-Roman"            font="URWPalladioL-Roma"/>
   <alias name="Times-Bold"             font="URWPalladioL-Bold"/>
   <alias name="Times-BoldItalic"       font="URWPalladioL-BoldItal"/>
   <alias name="Times-Italic"           font="URWPalladioL-Ital"/>

   <font name="Symbol"                  afm="afm/Symbol.afm" embed="false" />

   <font name="ZapfDingbats"            afm="afm/ZapfDingbats.afm" embed="false">
     <alias name="Zapf Dingbats"/>
     <alias name="ITC Zapf Dingbats"/>
   </font>

</fonts>

