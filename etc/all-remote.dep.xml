<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "component-dependency.dtd" >

<!--
	Utility dependency descriptor gathering
	all remote Carrot2 components and their
	dependencies.
  -->

<component
    name="all remote components"
    description="All Carrot2 Remote Components">
    
    <!-- Dual components (local and remote), so remote profile enforced -->
    
    <dependency name="carrot2-filter-ahc" in-profile="remote" />
    <dependency name="carrot2-filter-fuzzyants" in-profile="remote" />
    <dependency name="carrot2-filter-lingo" in-profile="remote" />
    <dependency name="carrot2-filter-stc" in-profile="remote" />

    <dependency name="carrot2-input-egothor" in-profile="remote" />
    <dependency name="carrot2-input-nutch" in-profile="remote" />
    <dependency name="carrot2-input-snippet-reader" in-profile="remote" />
    <dependency name="carrot2-input-verbatim" />

    <!-- Only remote components -->
    <dependency name="carrot2-filter-stemmer" />
    <dependency name="carrot2-filter-stream-interceptor" />
    <dependency name="carrot2-input-tree-snippet-miner" />
    <dependency name="carrot2-output-xsltrenderer" />
    <dependency name="carrot2-remote-controller" />

</component>
