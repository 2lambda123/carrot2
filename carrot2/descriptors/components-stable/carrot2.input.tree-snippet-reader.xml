<?xml version="1.0" encoding="UTF-8"?>

<service xmlns     = "http://www.dawidweiss.com/projects/carrot/componentDescriptor" 
         framework = "Carrot2"
>

    <!-- Snippet Reader service, Google pl wrapper input component -->
    <component id               = "carrot2.input.tree-snippet-reader.google-pl"
               type             = "input"
               serviceURL       = "http://@DEPLOY_HOST@:@DEPLOY_PORT@/carrot2-treeSnippetMiner/treeExtractor/google-pl">
        <acceptedFormat>
            <mime>application/x-carrot-clustering-input-query</mime>
        </acceptedFormat>
        <producedFormat>
            <mime>application/x-carrot-clustering-plain-response</mime>
        </producedFormat>
    </component>
