
<project name="Carrot2 Snippet Reader Input Component" default="build">

    <property name="project.dir"      location="${basedir}" />
    <property name="carrot2.cvs.dir"  location="../.." />
    <property name="component.descriptor" location="carrot2-input-snippet-reader.dep.xml" />
    <property name="dist.name" value="carrot2-input-snippet-reader" />
    <property name="tests.available"  value="true"    />


    <import file="${carrot2.cvs.dir}/components/common-targets.inc" />

	<target name="build">
		<ant antfile="build.local.xml" inheritall="false"/>	
		<ant antfile="build.remote.xml" inheritall="false" />
	</target>    
    
    <target name="test">
        <property name="build.dir"        location="${project.dir}/tmp/build" />
        <property name="build.type"       value="type-test" />

        <!-- services are needed for tests. copy them -->
        <copy toDir="${build.dir}/${build.type}">
           <fileset dir=".">
             <include name="web/services/**" />
           </fileset>
        </copy>

    	<property name="profile" value="test" />
        <ant target="build.testtype"
             antfile="${carrot2.cvs.dir}/components/master.xml"
             inheritall="true" inheritrefs="true">
        </ant>    
    </target>

</project>
