<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../etc/component-dependency.dtd" >

<component
    name="carrot2-input-snippet-reader"
    description="Carrot2 Snippet Reader (RegExp-based Search Engine Wrapper)">

    <provides profile="remote">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-input-snippet-reader.war" />
        </files>
        <build>
            <ant file="build.remote.xml" target="build" />
        </build>
    </provides>

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />
	<dependency name="carrot2-util-common" />
	<dependency name="carrot2-local-core" />
    <dependency name="jdom" />
    <dependency name="gnu-regexp" />
	<dependency name="carrot2-util-remote" />

    <dependency name="xmlrpc" 					profile="remote" />
    <dependency name="servlets-api"             profile="remote" nocopy="true" />

    <dependency name="junit"                    profile="test" />
</component>
