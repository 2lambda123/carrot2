<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

  <display-name>YahooAPI input component</display-name>
  <description>Input component type for Carrot2.</description>

  <!-- SERVLETS -->

  <servlet>
    <servlet-name>YahooApiInput</servlet-name>
    <servlet-class>com.dawidweiss.carrot.input.InputRequestProcessorServlet</servlet-class>
    <init-param>
        <param-name>inputRequestProcessor</param-name>
        <param-value>com.dawidweiss.carrot.input.yahoo.RemoteYahooApiInputComponent</param-value>
    </init-param>

    <init-param>
        <param-name>yahoo.services.dir</param-name>
        <param-value>/services</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <!-- SERVLET MAPPINGS -->

  <servlet-mapping>
    <servlet-name>YahooApiInput</servlet-name>
    <url-pattern>/service</url-pattern>
  </servlet-mapping>

</web-app>
