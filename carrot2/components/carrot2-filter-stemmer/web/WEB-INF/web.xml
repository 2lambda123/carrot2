<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

  <!-- WEBAPP INFO SECTION -->

  <display-name>Stemming Filter</display-name>
  <description>Strips suffixes off terms in the input, building linguistic data for Carrot2 clustering format.</description>

  <!-- SERVLETS -->

  <servlet>
    <servlet-name>Stemming</servlet-name>
    <servlet-class>com.dawidweiss.carrot.filter.FilterRequestProcessorServlet</servlet-class>
    <init-param>
        <param-name>filterRequestProcessor</param-name>
        <param-value>com.dawidweiss.carrot.filter.stemmer.StemmerServlet</param-value>
    </init-param>
    <init-param>
        <param-name>log4j.properties</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- SERVLET MAPPINGS -->

  <servlet-mapping>
    <servlet-name>Stemming</servlet-name>
    <url-pattern>/service</url-pattern>
  </servlet-mapping>

</web-app>
