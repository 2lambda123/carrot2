<component
    name="carrot2-stemmer-stempelator"
    description="Carrot2 Stempelator Stemmer (Polish)">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-stemmer-stempelator.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
    </provides>

	<!-- Carrot2 components -->
	<dependency name="carrot2-local-core" />
    <dependency name="carrot2-license" />
    <dependency name="stempelator" />

</component>
