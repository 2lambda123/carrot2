<?xml version="1.0" encoding="UTF-8" ?>

<!--
  ## Carrot2 Configuration.
  ##
  ## Specify "reloadable" attribute to "true" if you want this configuration to be
  ## reloaded upon a GET request to "{context-path}/reload" URL.
  -->
<carrot2-config reloadable="true" fullDebugReport="true">

    <!--
      ## specify a context-relative directory from where default component descriptions
      ## are going to be loaded
      -->
    <components contextDir="/WEB-INF/components" />

    <!--
      ## specify a context-relative directory from where default processes
      ## are going to be loaded
      -->
    <processes contextDir="/WEB-INF/processes" />
    
    <!--
      ## Specify the name of a default process. Lack of this
      ## element will cause a random (the first?) process
      ## to become the default.
      -->
    <default-process id="carrot2.process.lingo-google-en" />
    
    <!-- 
      ## Specify other properties that the controller should know about.
      ##
      ## request-history   (true|false|<missing>)
      ##   Enables request history to be recorded and displayed in the
      ##   controller. This is a privacy issue :) 
      -->
    <properties>
    	<property name="request-history" value="true" />
    </properties>

    <!--
      ## Specify the context-relative cache configuration file
      -->
    <cache config="/WEB-INF/cache-config.xml" />
    
    <!-- 
      ## Guards
      -->
    <guards contextDir="/WEB-INF/guards" />

</carrot2-config>
