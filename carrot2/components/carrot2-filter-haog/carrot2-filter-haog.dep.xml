<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.cs.put.poznan.pl/dweiss/carrot/component-dependency.dtd" >

<component
    name="carrot2-filter-haog"
    description="Carrot2 HAOG Clustering Filter">

    <provides profile="local">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-haog.jar" />
        </files>
        <build>
            <ant file="build.local.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="web" />
		</check-newer>
    </provides>

    <provides profile="remote">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-haog.war" />
        </files>
        <build>
            <ant file="build.remote.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="web" />
		</check-newer>
    </provides>

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />

    <dependency name="dom4j" />
    <dependency name="carrot2-util-tokenizer" />
    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-filter-stc" in-profile="local" />

    <dependency name="carrot2-util-remote" profile="remote" />
    <dependency name="carrot2-filter-case-normalizer" profile="remote" />

    <dependency name="mockobjects" profile="test" />
    <dependency name="junit" profile="test" />
    <dependency name="carrot2-util-remote" profile="test" />
    <dependency name="carrot2-filter-case-normalizer" profile="test" />
</component>
