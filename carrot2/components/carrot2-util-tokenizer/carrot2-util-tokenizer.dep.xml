<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.cs.put.poznan.pl/dweiss/carrot/component-dependency.dtd" >

<component
    name="carrot2-util-tokenizer"
    description="Carrot2 Tokenizer Component">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-util-tokenizer.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
    </provides>

    <!-- Carrot2 components -->
    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-util-common" />
    <dependency name="carrot2-license" />
    <dependency name="carrot2-snowball-stemmers" />
    <dependency name="carrot2-stemmer-stempelator" />

    <!-- Libraries -->
    <dependency name="log4j" />
	<dependency name="commons-pool" />

    <!-- Test profile -->
    <dependency name="junit" profile="test" />
    <dependency name="carrot2-input-local-cache" profile="test" />
</component>
