<?xml version="1.0" encoding="UTF-8" ?>
<cache>

    <container 
        implementation="com.dawidweiss.carrot.remote.controller.cache.MemoryCachedQueriesContainer"
    >
        <size-limit>1048576</size-limit> <!-- 1mb memory cache limit -->
    </container>

    <container
        implementation="com.dawidweiss.carrot.remote.controller.cache.ZIPCachedQueriesContainer"
    >
        <use-system-temp>true</use-system-temp>
        <size-limit>5000000</size-limit> <!-- 5mb disk cache limit -->
    </container>
    
    <container
        implementation="com.dawidweiss.carrot.remote.controller.cache.ZIPCachedQueriesContainer"
    >
        <context-relative-dir>WEB-INF/precached-queries</context-relative-dir>
        <read-only>true</read-only>
    </container>

</cache>
