<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.cs.put.poznan.pl/dweiss/carrot/component-dependency.dtd" >

<component
    name="carrot2-util-local"
    description="Carrot2 local utility classes">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-util-local.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
        <check-newer>
            <fileset dir="src" />
        </check-newer>
    </provides>

    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-license" />

    <dependency name="log4j" />

    <dependency name="junit" profile="test" />
</component>
