<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

  <!-- WEBAPP INFO SECTION -->

  <display-name>Lingo</display-name>
  <description>Lingo (Reloaded) clustering component</description>

  <!-- SERVLETS -->

  <servlet>
    <servlet-name>Lingo Reloaded</servlet-name>
    <servlet-class>com.dawidweiss.carrot.filter.FilterRequestProcessorServlet</servlet-class>
    <init-param>
        <param-name>filterRequestProcessor</param-name>
        <param-value>com.stachoodev.carrot.filter.lingo.remote.LingoReloadedRequestProcessor</param-value>
    </init-param><load-on-startup>1</load-on-startup>
  </servlet>

  <!-- SERVLET MAPPINGS -->

  <servlet-mapping>
    <servlet-name>Lingo Reloaded</servlet-name>
    <url-pattern>/service/LingoReloaded</url-pattern>
  </servlet-mapping>

</web-app>
