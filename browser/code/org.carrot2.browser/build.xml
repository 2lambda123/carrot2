<project name="org.carrot2.browser" default="native2ascii">
	
	<target name="native2ascii">
		<native2ascii encoding="utf-8" src="${basedir}/utf8/messages" 
			dest="${basedir}/src/org/carrot2/browser">
			<mapper type="glob" from="*.properties.utf8" to="*.properties"/>
		</native2ascii>
		<native2ascii encoding="utf-8" src="${basedir}/utf8/plugin" 
			dest="${basedir}">
			<mapper type="glob" from="*.properties.utf8" to="*.properties"/>
		</native2ascii>
	</target>
	
</project>