<?xml version="1.0" encoding="UTF-8"?>
<project default="javadoc">
  <property file="local.properties" />
  
  <target name="javadoc">
    <javadoc access="public"
             packagenames="org.carrot2.*"
             sourcepath="${carrot2.code.dir}\code\carrot2-algorithm-synthetic\src;${carrot2.code.dir}\code\carrot2-source-yahoo\src;${carrot2.code.dir}\code\carrot2-core\src">

      <classpath>
        <fileset dir="${carrot2.code.dir}\lib">
          <include name="**/*.jar" />
        </fileset>
        <pathelement location="${carrot2.code.dir}\code\carrot2-core\tmp\eclipse" />
        <pathelement location="${carrot2.code.dir}\code\carrot2-source-yahoo\tmp\eclipse" />
        <pathelement location="${carrot2.code.dir}\code\carrot2-algorithm-synthetic\tmp\eclipse" />
        <pathelement location="${carrot2.code.dir}\code\carrot2-util-common\tmp\eclipse" />
      </classpath>
      
      <doclet name="org.carrot2.core.attribute.javadoc.AttributeJavadocToXmlDoclet"
              path="${carrot2.code.dir}\lib\google-collections.jar;${carrot2.code.dir}\lib\dom4j-1.6.1.jar;${carrot2.code.dir}\lib\log4j-1.2.14.jar;${carrot2.code.dir}\code\carrot2-core-tools\tmp\eclipse;${carrot2.code.dir}\code\carrot2-core\tmp\eclipse" />
    </javadoc>
  </target>
</project>
