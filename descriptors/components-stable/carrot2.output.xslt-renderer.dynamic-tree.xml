<?xml version="1.0" encoding="UTF-8"?>

<service xmlns      = "http://www.dawidweiss.com/projects/carrot/componentDescriptor" 
         framework  = "Carrot2"
>

    <!-- XSLT processor -->

    <component id               = "carrot2.output.xslt-renderer.dynamic-tree"
               type             = "output"
               serviceURL       = "http://@DEPLOY_HOST@:@DEPLOY_PORT@/carrot2-xslt-renderer/service?stylesheet=dtree"
               infoURL          = "http://@DEPLOY_HOST@:@DEPLOY_PORT@/carrot2-xslt-renderer"
    >
        <acceptedFormat>
            <mime>application/x-carrot-clustering-plain-response</mime>
        </acceptedFormat>
        <acceptedFormat>
            <mime>application/x-carrot-clustering-groups</mime>
        </acceptedFormat>
        <producedFormat>
            <mime>text/html</mime>
        </producedFormat>
    </component>

</service>
