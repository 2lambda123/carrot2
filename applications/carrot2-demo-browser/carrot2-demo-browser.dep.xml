<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-demo-browser"
    description="Carrot2 Demo Browser Application">

    <provides profile="stripped">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-demo-browser.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build.stripped" />
        </build>
        <check-newer>
            <fileset dir="src" />
        </check-newer>
    </provides>

    <provides profile="full">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-demo-browser.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build.full" />
        </build>
        <check-newer>
            <fileset dir="src" />
        </check-newer>

		<meta type="proguard"><![CDATA[
# (demo browser) 
-keep class carrot2.demo.Demo* {
    public static void main(java.lang.String[]);
}

-keep interface carrot2.demo.ProcessSettings {
    public protected *;
}

-keep class * implements carrot2.demo.ProcessSettings {
    public protected *;
}

-keepnames class carrot2.demo.swing.*
		]]></meta>        
    </provides>

    <!-- Required components -->

    <dependency name="looks" />
    <dependency name="forms" />
    <dependency name="junit" />
    <dependency name="jdic" />
    <dependency name="dom4j" />
    <dependency name="lucene" />

    <dependency name="carrot2-util-common" />
    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-local-controller" />
    
    <dependency name="proguard-base" />

	<!-- Stripped profile contains component references for compilation time only -->

    <dependency name="carrot2-filter-lingo" in-profile="local" profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-trc" in-profile="local"   profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-stc" in-profile="local"   profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-haog" in-profile="local"   profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-yahooapi" in-profile="local" profile="stripped" nocopy="true" />
    <dependency name="carrot2-util-tokenizer" profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-local-cache" in-profile="local" profile="stripped" nocopy="true" />
	<dependency name="carrot2-filter-case-normalizer" in-profile="local" profile="stripped" nocopy="true" />

	<!-- Full profile contains all demo components -->

    <dependency name="carrot2-filter-lingo" in-profile="local" profile="full" />
    <dependency name="carrot2-filter-trc" in-profile="local"   profile="full" />
    <dependency name="carrot2-filter-stc" in-profile="local"   profile="full" />
    <dependency name="carrot2-filter-haog" in-profile="local"   profile="full" />
    <dependency name="carrot2-input-yahooapi" in-profile="local" profile="full" />
    <dependency name="carrot2-util-tokenizer" profile="full" />
    <dependency name="carrot2-input-local-cache" in-profile="local" profile="full" />
	<dependency name="carrot2-filter-case-normalizer" in-profile="local" profile="full" />
</component>

