<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../etc/component-dependency.dtd" >

<component
    name="carrot2-demo-browser"
    description="Carrot2 Demo Browser Application">

    <provides>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

	<!-- Required components -->

	<dependency name="looks" />
	<dependency name="forms" />
    <dependency name="junit" />
    <dependency name="jdic" />

    <dependency name="carrot2-util-common" />
    <dependency name="carrot2-util-put" />
    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-util-tokenizer" />
    
    <dependency name="carrot2-filter-lingo" in-profile="local" />
    <dependency name="carrot2-filter-trc" in-profile="local" />
	<dependency name="carrot2-input-snippet-reader" in-profile="local"/>
	<dependency name="carrot2-input-local-cache" in-profile="local"/>
	<dependency name="carrot2-input-yahooapi" in-profile="local"/>
	<dependency name="carrot2-local-controller" />
</component>

