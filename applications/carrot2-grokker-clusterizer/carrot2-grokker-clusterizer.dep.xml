<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../etc/component-dependency.dtd" >

<component
    name="carrot2-grokker-clusterizer"
    description="Carrot2 Clusterizer for Grokker">

    <provides>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
			<fileset dir="etc" />
		</check-newer>
    </provides>

    <dependency name="carrot2-local-core" />
	<dependency name="carrot2-util-tokenizer" />
    <dependency name="carrot2-filter-lingo" in-profile="local" />
    <dependency name="log4j" />
    <dependency name="junit" profile="test" />

</component>
