<!-- Components included in all applications -->
<component-suite>
  <sources>
    <source component-class="org.carrot2.source.microsoft.Bing2WebDocumentSource" id="bing-web"
            attribute-sets-resource="source-bing-attributes.xml">
      <label>Bing Web</label>
      <title>Bing Web Search</title>
      <mnemonic>B</mnemonic>
      <description>Searches the Web using Bing Search</description>
      <icon-path>icons/bing.png</icon-path>
      <example-queries>
        <example-query>data mining</example-query>
        <example-query>lucene</example-query>
        <example-query>java</example-query>
      </example-queries>
    </source>

    <source component-class="org.carrot2.source.microsoft.Bing2NewsDocumentSource" id="bing-news"
            attribute-sets-resource="source-bing-attributes.xml">
      <label>Bing News</label>
      <title>Bing News Search</title>
      <mnemonic>N</mnemonic>
      <description>Searches news stories using Bing Search</description>
      <icon-path>icons/bing.png</icon-path>
      <example-queries>
        <example-query>crisis</example-query>
        <example-query>market</example-query>
        <example-query>war</example-query>
      </example-queries>
    </source>
    
    <source component-class="org.carrot2.source.microsoft.Bing2ImageDocumentSource" id="bing-image"
            attribute-sets-resource="source-bing-attributes.xml">
      <label>Bing Images</label>
      <title>Bing Image Search</title>
      <mnemonic>I</mnemonic>
      <description>Searches images using Bing Search</description>
      <icon-path>icons/bing.png</icon-path>
      <example-queries>
        <example-query>cats</example-query>
        <example-query>dogs</example-query>
        <example-query>dark side of the moon</example-query>
      </example-queries>
    </source>    
  </sources>
</component-suite>
